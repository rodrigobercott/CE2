   "source": [
    "class Solution:\n",
    "   def solve(self, s):\n",
    "      output = \"\"\n",
    "      num=\"\"\n",
    "      for i in s:\n",
    "         if i.isalpha():\n",
    "            output+=i*int(num)\n",
    "            num=\"\"\n",
    "         else:\n",
    "            num+=i\n",
    "      return output\n",
    "ob = Solution() \n",
    "print(ob.solve(\"4B3A2D1C2B\"))"
   ]
