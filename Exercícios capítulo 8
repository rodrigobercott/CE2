    "def binary(n):\n",
    "   if n > 1:\n",
    "       binary(n//2)\n",
    "   print(n % 2,end = '')\n",
    " \n",
    "dec = int(input(\"Entre um inteiro: \"))\n",
    "binary(dec)"
