    "def sqrtSearch(low, high, N) : \n",
    "      if (low <= high) :\n",
    "        mid = (low + high) // 2; \n",
    " \n",
    "        if ((mid * mid <= N) and ((mid + 1) * (mid + 1) > N)) :\n",
    "            return mid; \n",
    "\n",
    "        elif (mid * mid < N) : \n",
    "            return sqrtSearch(mid + 1, high, N); \n",
    "      \n",
    "        else :\n",
    "            return sqrtSearch(low, mid - 1, N); \n",
    "  \n",
    "    return low; \n",
    "  \n",
    "if __name__ == \"__main__\" : \n",
    "  \n",
    "    N = 25; \n",
    "    print(sqrtSearch(0, N, N)) "
   ]
